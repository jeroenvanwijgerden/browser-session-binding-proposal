{
  "manifest_version": 3,
  "name": "Out-of-Band Binding PoC",
  "version": "0.1.0",
  "description": "Proof of concept demonstration of the Out-of-Band Session Binding protocol",

  "permissions": [
    "sidePanel"
  ],

  "background": {
    "service_worker": "service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "action": {
    "default_title": "OOB Binding"
  }
}
