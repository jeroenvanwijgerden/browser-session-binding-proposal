{
  "manifest_version": 2,
  "name": "Out-of-Band Binding PoC",
  "version": "0.1.0",
  "description": "Proof of concept demonstration of the Out-of-Band Session Binding protocol",

  "browser_specific_settings": {
    "gecko": {
      "id": "oob-binding-poc@example.com"
    }
  },

  "permissions": [
    "<all_urls>",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "inject.js"
  ],

  "browser_action": {
    "default_title": "OOB Binding"
  }
}
